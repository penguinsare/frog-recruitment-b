@{
}

@model RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}

<div class="container">

    <div class="container">
        <div class="row justify-content-center ">
            <div class="col align-self-center col-sm-11 col-md-7 col-lg-5 col-xl-5 ">
                <img class="logo-image" src="~/image_full_white.png" />
                @*<div class="shadow-sm p-3 mb-5 bg-white rounded"></div>*@
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col align-self-center col-sm-12 col-md-9 col-lg-7 col-xl-7 border-bottom mt-5">

            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col align-self-center col-sm-12 col-md-8 col-lg-6 col-xl-6 mt-2">
                <partial name="_ValidationSummary" />
            </div>

        </div>
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6 col-xl-6 align-self-center mt-3">
                <div class="">
                    <div class=" align-self-center">
                        <form asp-controller="Account" asp-action="SendPasswordResetLink">
                            <fieldset>
                                <h1>Recover Password per Email </h1>
                                <br />
                                <br />
                                <div>
                                    <label asp-for="Username"></label>
                                    <input class="form-control" asp-for="Username" autofocus autocomplete="off">
                                </div>
                                <br />
                                <div class="mt-4">
                                    <button class="btn frog-background btn-block" name="button" value="login">Recover Password</button>
                                    @*<button class="btn btn-default" name="button" value="cancel">Cancel</button>*@
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>